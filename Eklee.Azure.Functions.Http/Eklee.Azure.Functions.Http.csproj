<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.4.1</Version>
    <Authors>Eng-Keong David Lee</Authors>
    <Description>The purpose of this library is to help developers with dependency injection per HTTP request context. This is currently not available via the default dependency injection infrastructure.</Description>
    <RepositoryUrl>https://github.com/seekdavidlee/Eklee-Azure-Functions-Http.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>AutoFac, DI, Azure Functions, Dependency Injection, AzureAD, Http request, IConfiguration</PackageTags>
    <PackageReleaseNotes>Support for Microsoft.Extensions.Configuration.IConfiguration to be injected and used directly. This means developers do not have to worry about hooking up their own IConfiguration implementation via ExecutionContext.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.8.1" />
    <PackageReference Include="Microsoft.NET.Sdk.Functions" Version="1.0.23" />
  </ItemGroup>

</Project>
